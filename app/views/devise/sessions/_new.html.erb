<div class="container text-center login-home">
  <%#= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= simple_form_for(@user, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="session-devise d-flex flex-column">
    <div class="form-inputs p4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="submit-devise">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
    </div>
</div>
