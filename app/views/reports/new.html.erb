<div class="background-form py-5">
  <div class="container-form">
    <h1 class='text-center py-3 pt-5'>Reporte sua denuncia</h1>

    <div class='text-center mt-3 px-5 py-3'>
      <%= simple_form_for @report do |f| %>
        <%= f.input :description, label: 'Descrição' %>
        <%= f.input :category, label: 'Categoria', collection: ['Acidente de Trânsito','Briga no Trânsito','Briga na rua', 'Briga Doméstica na rua', 'Tráfico de Drogas', 'Utilização de Drogas em via Pública', 'Furto', 'Assalto com arma de fogo']%>
        <%= f.input :danger_level, label: 'Nivel de Perigo', collection: ['1','2','3','4','5'] %>
        <%= f.input :address, label: 'Endereço' %>
        <%# <%= f.input :photo, as: :file %>
        <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'btn btn-success btn-lg mt-4 w-100 upload-photo'}, label: 'Coloque foto' %>
        <div class="text-btn text-right w-100 mt-4">
          <%= f.button :submit, "Criar denuncia", class: "btn btn-primary btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
