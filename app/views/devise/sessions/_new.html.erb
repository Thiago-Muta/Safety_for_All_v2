<div class="container text-center login-home">
  <div class="session-devise d-flex flex-column">
    <%= simple_form_for(@user, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs p4">
        <h2>Entrar</h2>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: 'Senha',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Lembrar-me', as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="submit-devise">
        <%= f.button :submit, "Entrar" %>
      </div>
    <% end %>
    <div class="assist-devise">
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registrar", new_registration_path(resource_name) %><br />
      <% end %>
      
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
</div>
