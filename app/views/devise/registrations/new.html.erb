<div class="background-form py-5">
  <div class="text-center container-form py-3 pt-5">
    <h2>Cadastre-se</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs row justify-content-center text-center mt-3 px-5 py-3">
      <div class="col-6">
        <%= f.input :first_name, label: 'PRIMEIRO NOME', placeholder: 'Alan'  %>
      </div>
      <div class="col-6">
        <%= f.input :last_name, label: 'SOBRENOME', placeholder: 'Turing' %>
      </div>

      <div class="col-6">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, label: 'E-MAIL', placeholder: 'Seu e-mail', class: 'col-6' %>
      </div>
      <div class="col-6">
        <%= f.input :cpf, label: 'CPF', placeholder: '351.684.951-73', class: 'col-6'  %>
      </div>

      <div class="col-6 ">
        <%= f.input :phone_number, label: 'TELEFONE CELULAR', placeholder: '(11) 98763-1954', class: 'col-6'  %>
      </div>
      <div class="col-6">
        <%= f.input :send_to_phone, label: 'TELEFONE SOS', placeholder: '(15) 96487-3547', class: 'col-6' %>
      </div>

      <div class="col-6">
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, label: 'SENHA', placeholder: '*********', class: 'col-6'  %>
      </div>
      <div class="col-6">
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" }, label: 'REPETIR SENHA', placeholder: '*********', class: 'col-6'  %>
      </div>
      <div class="col-6">
        <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'btn btn-success btn-lg mt-4 w-100 upload-photo'}, label: 'Coloque sua foto' %>
      </div>




      <div class="col-6 form-actions text-btn text-right w-100 mt-4">
        <%= f.button :submit, "Cadastrar", class: "col-6 mb-2 btn btn-primary btn-lg" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
